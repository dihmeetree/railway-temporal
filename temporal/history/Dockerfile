FROM temporalio/auto-setup:1.22.2

ARG DB DBNAME DB_PORT POSTGRES_USER POSTGRES_PWD POSTGRES_SEEDS

COPY ./dynamic.yaml /etc/temporal/config/dynamicconfig/dynamic.yaml

# ENV BIND_ON_IP="[::]"
ENV DB="postgresql"
ENV DB_PORT=5432
ENV DYNAMIC_CONFIG_FILE_PATH="config/dynamicconfig/dynamic.yaml"
ENV ENABLE_ALPINE_PRIVATE_NETWORKING=true
ENV ENABLE_ES=true
ENV ES_PORT=9200
ENV ES_SCHEME="http"
ENV ES_VERSION="v7"
# ENV HISTORY_GRPC_PORT=7234
# ENV HISTORY_MEMBERSHIP_PORT=6934
ENV PROMETHEUS_ENDPOINT="0.0.0.0:8000"
ENV SERVICES="history"
ENV TEMPORAL_ADDRESS="temporal-frontend-service.railway.internal:7233"
# ENV TEMPORAL_BROADCAST_ADDRESS="[::]"
ENV TEMPORAL_HISTORY_NAMESPACEDEFAULT_ARCHIVAL_FILESTORE="enabled"
